<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:contentDescription="backgroundimg"
        android:scaleType="centerCrop"
        android:src="@drawable/boxpic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="#54FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dataBaseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Database Text will show here"
            android:padding="15dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/deleteUserText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".5"
            android:hint="Enter email to see your account" />

        <Button
            android:id="@+id/getDataButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="See your info" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Click to delete user" />



    </LinearLayout>

</FrameLayout>
